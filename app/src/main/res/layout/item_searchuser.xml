<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_bg_color"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_message"
        android:background="@drawable/btn_selector">

        <com.houxy.wechat.view.CircleImageView
            android:id="@+id/iv_userAvatar"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:src="@mipmap/head"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_15"/>

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_userAvatar"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_centerInParent="true"
            android:text="侯鑫云"
            android:textStyle="bold"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/text_size_medium"/>

        <Button
            android:id="@+id/btn_addFriend"
            android:text="聊天"
            android:textSize="@dimen/ts_13"
            android:textColor="@color/base_color_text_white"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_login_selector"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_2"
        android:background="@mipmap/base_horizontal_line" >
    </View>

</LinearLayout>